<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialog_shape"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="35dp"
            android:paddingEnd="25dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/transparent" />

            <Button
                android:id="@+id/start_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/btn_shape"
                android:backgroundTint="#F6F7F8"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:lineSpacingExtra="12sp"
                android:text="遍历测试"
                android:textAlignment="center"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/divideLine" />

            <Button
                android:id="@+id/monkey_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/btn_shape"
                android:backgroundTint="#F6F7F8"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:lineSpacingExtra="12sp"
                android:text="Monkey测试"
                android:textAlignment="center"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/divideLine" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/divideLine" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingTop="25dp"
        android:paddingEnd="25dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="设置"
            android:textColor="@drawable/text_click_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/set"
            android:paddingStart="25dp"
            android:text="帮助"
            android:textColor="@drawable/text_click_color"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/charts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/look"
            android:paddingStart="25dp"
            android:text="性能图表"
            android:textColor="@drawable/text_click_color"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="取消"
            android:textColor="@drawable/text_click_color"
            android:textSize="16sp" />


    </RelativeLayout>

</LinearLayout>
